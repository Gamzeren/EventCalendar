@model EventCalendar.Entities.Event

@{
    ViewData["Title"] = "UpdateEventDate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" />

<h2 class="gradient-text2 d-block mx-auto text-center mt-4">Etkinliği Güncelle</h2>

@using (Html.BeginForm("UpdateEventDate", "Event", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EventId)
    <div class="form-group">
        <label for="Title">Başlık</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "CategoryId", "Name", Model.CategoryId), "Seçiniz", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="StartDate">Başlangıç Tarihi ve Saati</label>
        @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @type = "datetime-local", @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="EndDate">Bitiş Tarihi ve Saati</label>
        @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @type = "datetime-local", @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Event/Index" class="btn btn-secondary">Geri Dön</a>
}