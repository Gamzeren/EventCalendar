
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />

<h2 class="gradient-text text-center mt-4">Kategori Ekle</h2>


@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">@Html.ValidationSummary()</div>
}

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Color">Color (Hex)</label>
        <input type="color" name="Color" class="form-control" value="#3788d8" required />
    </div>
    <button type="submit" class="btn btn-primary">Kategori Ekle</button>
}

