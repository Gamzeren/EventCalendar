@model EventCalendar.Entities.Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />

<h2 class="gradient-text text-center mt-4">Kategori Güncelle</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">@Html.ValidationSummary()</div>
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CategoryId)
    <div class="form-group">
        <label for="Name">Adı</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="Color">Renk (Hex)</label>
        @Html.TextBoxFor(m => m.Color, new { @class = "form-control", type = "color", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
}
